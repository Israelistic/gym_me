<%= form_for event do |f| %>

<p><%= f.label :title %></p>
<p><%= f.text_field :title %></p>

<p><%= f.label :type %></p>
<p><%= f.text_field :type %></p>

<p><%= f.label :time %></p>
<p><%= f.datetime_field :time %></p>

<p><%= f.label :location %></p>
<p><%= f.text_field :location %></p>

<p><%= f.label :description %></p>
<p><%= f.text_area :description %></p>

<p><%= f.submit "Create event" %></p>

<% end %>
