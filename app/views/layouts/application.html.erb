<!DOCTYPE html>
<html>
  <head>
    <title>GymMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "https://maps.google.com/maps/api/js?key=#{ENV["google_maps_api_key"]}&libraries=places" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <!-- Renders user avatar and drop down menu -->
    <%= render "shared/user_menu" %>

    <!-- Renders main nav bar -->
    <%= render "shared/nav_bar" %>

    <section class="container">
      <%= yield %>
    </section>

  </body>

</html>
