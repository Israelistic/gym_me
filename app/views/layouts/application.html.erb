<!DOCTYPE html>
<html>
  <head>
    <title>GymMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "https://maps.google.com/maps/api/js?key=#{ENV["google_maps_api_key"]}&libraries=places" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <header>
      <h1 class="logo">Gym Me </h1>
        <% if current_user %>
          <p>Logged in: <%= current_user.email %></p>
          <nav class="top-nav">
          <%= link_to "Discover Events", discover_path %> |
          <%= link_to "Home", home_path(current_user.id) %> |
          <%= link_to "New Chat Room", new_chat_room_path %> |
          <%= link_to "Find Gym Buddy", gymbuddy_path %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Log-in", new_user_session_path %> |
          <%= link_to "Discover Events", discover_path %>

        <% end %>

          </nav>

    </header>

    <div class="container">
      <%= yield %>
    </div>

  </body>

</html>
