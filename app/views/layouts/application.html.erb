<!DOCTYPE html>
<html>
  <head>
    <title>GymMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "https://maps.google.com/maps/api/js?key=#{ENV["google_maps_api_key"]}&libraries=places" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <header>
      <h1 class="logo">Gym Me</h1>

      <nav class="top-nav">
        <%= render 'shared/menu' %>
      </nav>
      <hr>
    </header>

    <div class="container">

      <%= yield %>
    </div>

  </body>

</html>
