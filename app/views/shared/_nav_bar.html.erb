<nav class="nav-bar">
  <div>
    <h1 class="gymmeLogo">Gymme</h1>
  </div>
    <ul class="nav-bar-items">
      <div class="nav-button">
        <%= link_to home_path(current_user.id) do %>
          <li class="desktop nav-item"> Home </li>
        <% end %>
      </div>
      <div class="nav-button">
        <%= link_to discover_path do %>
          <li class="desktop nav-item"> Discover Events </li>
        <% end %>
      </div>
      <div class="nav-button">
        <%= link_to gymbuddy_path do %>
          <li class="desktop nav-item"> Find Gym Buddy </li>
        <% end %>
      </div>
      <div class="nav-button">
        <%= link_to conversations_path do %>
          <li class="desktop nav-item"> Messages </li>
        <% end %>
      </div>
    </ul>

    <% if current_user %>
      <div class="profile-button" id="profile-avatar-button">
        <% if current_user.avatar.attached? %>
          <div class="avatar">
            <%= image_tag url_for(current_user.avatar) %>
          </div>
        <% else %>
          <div class="avatar">
            <%= image_tag(user_avatar(current_user)) %>
          </div>
        <% end %>
        <span>&#x25BC;</span>
      </div>

      <section class="user-options-modal hidden" id="user-menu">
        <div class="icon-button close-button" id="close-button">
          <%= image_tag("close.svg") %>
        </div>
        <ul class="user-options">
          <%= link_to new_event_path do %>
            <li class="user-options-link">Create Event</li>
          <% end %>
          <%= link_to user_path(current_user.id) do %>
            <li class="user-options-link">Profile</li>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <li class="user-options-link logout">Logout</li>
          <% end %>
        </ul>

      </section>

    <% end %>
</nav>
