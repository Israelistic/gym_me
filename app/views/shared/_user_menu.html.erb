<nav class="user-nav">
  <div class="logo">
      <h1 class="logo">Gym Me</h1>
  </div>

  <% if current_user %>
    <div class="profile-button" id="profile-avatar-button">
      <% if current_user.avatar.attached? %>
        <div class="avatar">
          <%= image_tag url_for(current_user.avatar) %>
        </div>
      <% else %>
        <div class="avatar">
          <%= image_tag(user_avatar(current_user)) %>
        </div>
      <% end %>
      <span>&#x25BC;</span>
    </div>

    <section class="user-options-modal hidden" id="user-menu">
      <div class="icon-button close-button" id="close-button">
        <%= image_tag("close.svg") %>
      </div>
      <div class="icon-button settings-button" id="close-button">
        <%= link_to edit_user_path(current_user.id) do %>
          <%= image_tag("settings.svg") %>
        <% end %>
      </div>
      <div class="profile-area">
        <% if current_user.avatar.attached? %>
          <div class="user-options-avatar">
            <%= image_tag url_for(current_user.avatar) %>
          </div>

          <% else %>
            <div class="user-options-avatar">
              <%= image_tag(user_avatar(current_user)) %>
            </div>

        <% end %>
        <p class="current-user"><%= current_user.email %></p>
      </div>
      <ul class="user-options">
        <%= link_to new_event_path do %>
          <li class="user-options-item">Create Event</li>
        <% end %>
        <%= link_to user_path(current_user.id) do %>
          <li class="user-options-item">My Profile</li>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <li class="user-options-item">Logout</li>
        <% end %>
          <div class="logo-image">
              <%= image_tag("steam.png", class: "logo-image", alt: "Gym Me Logo") %>
          </div>
      </ul>
    </section>

  <% end %>
</nav>
