<h2>Edit Profile</h2>

<%= form_for( @user, url: user_path(@user.id) ) do |f| %>

  <div class="field">
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :age %><br/>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :sex %><br/>
    <%= f.text_field :sex %>
  </div>

  <div class="field">
    <%= f.label :country %><br/>
    <%= f.text_field :country, id: :country %>
  </div>

  <div class="two wide field">
    <%= f.label :province %><br/>
    <%= f.text_field :province, id: :province %>
  </div>

  <div class="field">
    <%= f.label :city %><br/>
    <%= f.text_field :city, id: :city %>
  </div>

  <div class="field">
    <%= f.label :street_address %><br/>
    <%= f.text_field :street_address, id: :street_address %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br/>
    <%= f.text_field :postal_code, id: :postal_code %>
  </div>

  <div  class="field">
    <%= f.label :avatar %><br/>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Advanced Profile Settings", edit_user_registration_path %>
