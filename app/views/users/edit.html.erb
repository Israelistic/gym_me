<h2>Edit Profile</h2>

<%= form_for( @user, url: user_path(@user.id) ) do |f| %>

  <div class="field">
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :age %><br/>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label "Gender" %><br/>
    <%= f.select :gender, ["Male", "Female", "Non-Binary", ["Rather Not Say", nil]]%>
  </div>

  <div class="field">
    <%= f.label "Preferred Workout Location" %><br/>
    <%= f.text_field :location, id: :postal_code %>
  </div>

  <div class="field">
    <%= f.label "Fitness level" %><br/>
    <%= f.select :fitness_level, [1, 2, 3]%>
  </div>

  <div class="field">
    <%= f.label "A Bit About Yourself" %><br/>
    <%= f.text_area :description %>
  </div>

  <div  class="field">
    <%= f.label :avatar %><br/>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <p><%= f.label "Do you want to find a gym buddy?" %></p>
    <%= f.label :matching, "Yes", :value => "true" %>
    <%= f.radio_button :matching, true, :checked => true %>
    <%= f.label :matching, "No", :value => "false"  %>
    <%= f.radio_button :matching, false %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>


<% end %>

<%= link_to "Advanced Profile Settings", edit_user_registration_path %>
