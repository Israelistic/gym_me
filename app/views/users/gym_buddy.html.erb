<div class="navBar">
<% if current_user %>
  <%= render "shared/nav_bar" %>
<% else %>
  <%= render "shared/landing_nav_bar" %>
<% end %>
</div>

<header class="event-index">
  <h1 class="discover-header">Find Gym Buddy</h1>
  <nav class="search">
    <h2 class="activity-type-header">Select Goals</h1>
    <%= form_tag users_path, method: :get do %>
      <div class="activity-icons-wrapper">
        <div class="activity-icon">
          <p class="activity-type-description">Yoga/Pilates</p>
          <label class="activity-type">
            <%= radio_button_tag :activity_goal, "Yoga/Pilates", checked = false %>
            <%= image_tag("noun_pilates.png") %>
          </label>
        </div>
        <div class="activity-icon">
          <p class="activity-type-description">Resistence</p>
          <label class="activity-type">
            <%= radio_button_tag :activity_goal, "Resistence Training", checked = false %>
            <%= image_tag("noun_Gym_icon.png") %>
          </label>
        </div>
        <div class="activity-icon">
          <p class="activity-type-description">Cardio</p>
          <label class="activity-type">
            <%= radio_button_tag :activity_goal, "Cardio", checked = false %>
            <%= image_tag("noun_Running.png") %>
          </label>
        </div>
        <div class="activity-icon">
          <p class="activity-type-description">Recreation</p>
          <label class="activity-type">
            <%= radio_button_tag :activity_goal, "Recreation", checked = false %>
            <%= image_tag("noun_Ultimate.png") %>
          </label>
        </div>
        <label class="activity-type">
          <%= radio_button_tag :activity_goal, "", checked = true %>
          <div class="activity-icon-all">All Activity Types</div>
        </label>
      </div>
        <div class="location-search">
          <%= text_field_tag :search %>
        </div>
        <div class="large-submit-button">
          <%= submit_tag "Find Buddy" %>
        </div>

    <% end %>
  </nav>
</header>
