<% if current_user %>
  <header class="user-index">
    <h1>Gym Buddy Results</h1>
    <nav class="search">
      <%= form_tag users_path, method: :get do %>
        <%= label_tag "Search Users" %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Find Gym Buddy" %>
      <% end %>
    </nav>
  </header>

  <section class="user-reults">
    <% @users.each do |user| %>
      <div class="user-card">
        <h3><%= link_to user.full_name, user_url(user.id) %></h3>
        <p>Fitness Level: <%= user.fitness_level %></p>
        <p>Location: <%= user.location %></p>
      </div>
    <% end %>
  </section>
<% end %>
